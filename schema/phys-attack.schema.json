{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PHYS-ATT&CK Matrix",
  "type": "object",
  "patternProperties": {
    "^[A-Za-z0-9 \\-_/()]+$": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "technique",
          "subtechniques",
          "mitigations",
          "detections"
        ],
        "additionalProperties": false,
        "properties": {
          "technique": {
            "type": "string",
            "minLength": 2
          },
          "subtechniques": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 2
            },
            "uniqueItems": true
          },
          "mitigations": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 2
            }
          },
          "detections": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 2
            }
          },
          "vulnerabilities": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "evidence",
                "linked_subtechnique",
                "likelihood",
                "impact",
                "detectability",
                "standards_ref"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 2
                },
                "evidence": {
                  "type": "string",
                  "minLength": 2
                },
                "linked_subtechnique": {
                  "type": "string",
                  "minLength": 2
                },
                "likelihood": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "impact": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "detectability": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "standards_ref": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "minLength": 2
                  }
                }
              }
            }
          },
          "exploits": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "vendor",
                "model",
                "vector",
                "standards_ref"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 2
                },
                "vendor": {
                  "type": "string",
                  "minLength": 1
                },
                "model": {
                  "type": "string",
                  "minLength": 1
                },
                "vector": {
                  "type": "string",
                  "minLength": 2
                },
                "prereqs": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "maturity": {
                  "type": "string",
                  "enum": [
                    "poc",
                    "weaponized",
                    "widely_available"
                  ]
                },
                "notes": {
                  "type": "string"
                },
                "references": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "affected_env": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "standards_ref": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}